<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cera_black_italic"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:text="Pilih Waktu Hutang"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:text="Anda harus memilih rentang waktu data hutang yang ingin ditampilkan"
        android:textSize="13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="Dari Tanggal"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTanggalAwal"
                android:layout_marginHorizontal="10dp"
                android:padding="5dp"
                android:background="@drawable/bg_rounded_white_3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:enabled="false"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/grey_800"
                android:hint="Tanggal awal"/>

            <Button
                android:id="@+id/btnPilihAwal"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Pilih" />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="Sampai Tanggal"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTanggalAkhir"
                android:layout_marginHorizontal="10dp"
                android:padding="5dp"
                android:background="@drawable/bg_rounded_white_3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:enabled="false"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/grey_800"
                android:hint="Tanggal akhir"/>

            <Button
                android:id="@+id/btnPilihAkhir"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="Pilih" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnFilter"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Filter" />

</LinearLayout>